<configuration>
    <springProfile name="dev">
        <conversionRule conversionWord="clr" converterClass="org.springframework.boot.logging.logback.ColorConverter" />
        <conversionRule conversionWord="wex" converterClass="org.springframework.boot.logging.logback.WhitespaceThrowableProxyConverter" />
        <conversionRule conversionWord="wex" converterClass="org.springframework.boot.logging.logback.ExtendedWhitespaceThrowableProxyConverter" />

        <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%clr(%d{"yyyy-MM-dd HH:mm:ss XXX"}){faint} %clr([%thread]){magenta} %clr(%-5level) %clr(%logger{36}){cyan} - %msg%n</pattern>
            </encoder>
        </appender>
    </springProfile>
    <springProfile name="prod">
        <conversionRule conversionWord="exShort" converterClass="ch.qos.logback.classic.pattern.ThrowableProxyConverter" />
        <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n%exShort{short}</pattern>
            </encoder>
        </appender>
    </springProfile>



    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>